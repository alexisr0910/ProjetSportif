{% extends 'base.html.twig' %}

{% block title %}
    Créer un nouveau mail de contact
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="display-4">Créer un nouveau mail de contact</h1>
        <hr class="my-4"/>

        {{ form_start(form) }}

        <div class="mb-3">
            {{ form_label(form.object, 'Objet') }}
            {{ form_widget(form.object, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.object) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.message, 'Message') }}
            {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.message) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.destinataires, 'Destinataires') }}
            {{ form_widget(form.destinataires, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.destinataires) }}
        </div>

        <div class="mt-4">
            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
